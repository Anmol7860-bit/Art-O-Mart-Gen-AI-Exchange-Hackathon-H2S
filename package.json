{
  "name": "art-o-mart",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build --sourcemap",
    "build:prod": "vite build",
    "preview": "vite preview",
    "serve": "vite preview",
    "test:e2e": "playwright test",
    "test:e2e:prod": "TEST_ENV=production BASE_URL=${BASE_URL:-https://art-o-mart-frontend-three.vercel.app} playwright test",
    "test:e2e:critical": "TEST_ENV=production playwright test --grep '@critical'",
    "test:unit": "jest --config=jest.config.js",
    "test:integration": "jest --config=jest.config.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:critical:prod": "TEST_ENV=production BASE_URL=${BASE_URL:-https://art-o-mart-frontend-three.vercel.app} playwright test --grep '@critical'",
    "deploy:vercel": "node scripts/deploy-frontend.js vercel",
    "deploy:netlify": "node scripts/deploy-frontend.js netlify",
    "deploy:aws": "node scripts/deploy-frontend.js aws",
    "deploy:prod": "./deploy-frontend-production.sh",
    "deploy:prod:vercel": "dotenv-cli -e .env.production -- ./deploy-frontend-production.sh vercel",
    "deploy:prod:netlify": "dotenv-cli -e .env.production -- ./deploy-frontend-production.sh netlify",
    "build:prod:env": "dotenv-cli -e .env.production -- vite build",
    "validate:prod": "dotenv-cli -e .env.production -- node scripts/validate-deployment.js",
    "validate:deployment": "node scripts/validate-deployment.js --url=$DEPLOYMENT_URL",
    "validate:production": "./validate-production.sh",
    "validate:production:quick": "./validate-production.sh --quick",
    "validate:production:skip-tests": "./validate-production.sh --skip-tests",
    "validate:production:report": "./validate-production.sh --report-only",
    "monitor:setup": "node -e \"console.log('Sentry monitoring setup - see docs/SENTRY_SETUP_GUIDE.md')\"",
    "monitor:health": "curl -f $PRODUCTION_HEALTH_CHECK_URL || echo 'Health check failed'",
    "test:user-flows": "node scripts/test-user-flows.js --url=$BASE_URL",
    "test:user-flows:prod": "dotenv-cli -e .env.production -- node scripts/test-user-flows.js --url=$BASE_URL --env=production",
    "db:status": "node scripts/db-status.js",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:test": "node scripts/db-status.js && echo 'Frontend DB tests completed'",
    "db:seed": "node scripts/db-seed.js",
    "db:validate": "node scripts/db-validate.js"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@headlessui/react": "^2.2.8",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@reduxjs/toolkit": "^2.6.1",
    "@sentry/react": "^7.118.0",
    "@sentry/replay": "^7.118.0",
    "@supabase/supabase-js": "^2.57.4",
    "axios": "^1.8.4",
    "chalk": "^5.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.0.1",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.484.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.55.0",
    "react-router-dom": "6.0.2",
    "react-router-hash-link": "^2.4.3",
    "recharts": "^2.15.2",
    "redux": "^5.0.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^3.5.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-react": "^7.24.0",
    "@dhiwise/component-tagger": "^1.0.10",
    "@playwright/test": "^1.47.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/line-clamp": "^0.1.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.2",
    "babel-jest": "^29.7.0",
    "dotenv-cli": "^7.4.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-transform-stub": "^2.0.0",
    "postcss": "8.4.8",
    "tailwindcss": "3.4.6",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-elevation": "^2.0.0",
    "tailwindcss-fluid-type": "^2.0.7",
    "vite": "5.0.0",
    "vite-tsconfig-paths": "3.6.0"
  }
}
