# Production Environment Configuration
# Copy this file to .env.production and update the values

# =============================================================================
# BASIC APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Application URLs
BASE_URL=https://your-backend-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# =============================================================================
# DATABASE CONFIGURATION (SUPABASE)
# =============================================================================

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# Google Gemini API
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key
GOOGLE_GEMINI_MODEL=gemini-1.5-pro

# AI Service Configuration
AI_REQUEST_TIMEOUT=30000
AI_MAX_RETRIES=3
AI_RATE_LIMIT_RPM=1000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars-long-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-min-32-chars
SESSION_MAX_AGE=86400000

# Password Requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_COMPLEXITY=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com
STRICT_CORS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Levels: error, warn, info, debug
LOG_LEVEL=info

# Logging Features
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_SECURITY_LOGGING=true

# Log Retention (in days)
LOG_RETENTION_DAYS=30

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# File Storage
UPLOAD_DIRECTORY=uploads
TEMP_DIRECTORY=temp

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# Email Service (if implemented)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=Art-O-Mart

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=5000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000
SLOW_REQUEST_THRESHOLD=5000

# Error Tracking (if using external service)
ERROR_TRACKING_DSN=your-error-tracking-dsn

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket Settings
WS_PORT=5000
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000
WS_MAX_CONNECTIONS=1000

# Message Queue (if implemented)
MESSAGE_QUEUE_URL=redis://your-redis-url
MESSAGE_QUEUE_PASSWORD=your-redis-password

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Cache (if implemented)
REDIS_URL=redis://your-redis-url
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Cache TTL (seconds)
CACHE_DEFAULT_TTL=3600
CACHE_SHORT_TTL=300
CACHE_LONG_TTL=86400

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent Management
AGENT_MAX_CONCURRENT=5
AGENT_RESTART_DELAY=5000
AGENT_MAX_ERRORS=10
AGENT_ERROR_WINDOW=300000

# Agent-specific Configuration
PRODUCT_RECOMMENDATION_AGENT_ENABLED=true
CUSTOMER_SUPPORT_AGENT_ENABLED=true
INVENTORY_MANAGEMENT_AGENT_ENABLED=true
MARKETING_AUTOMATION_AGENT_ENABLED=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Platform-specific settings (uncomment as needed)

# Render.com
# RENDER_SERVICE_ID=your-render-service-id
# RENDER_API_KEY=your-render-api-key

# Railway.app
# RAILWAY_TOKEN=your-railway-token
# RAILWAY_PROJECT_ID=your-railway-project-id

# Fly.io
# FLY_API_TOKEN=your-fly-api-token
# FLY_APP_NAME=your-fly-app-name

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================

# Payment Gateway (if implemented)
# STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Analytics (if implemented)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
# MIXPANEL_TOKEN=your-mixpanel-token

# Social Media APIs (if implemented)
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret
# TWITTER_API_KEY=your-twitter-api-key
# TWITTER_API_SECRET=your-twitter-api-secret

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=86400000
DB_BACKUP_RETENTION_DAYS=30

# File Backup
FILE_BACKUP_ENABLED=true
FILE_BACKUP_S3_BUCKET=your-backup-s3-bucket
FILE_BACKUP_S3_ACCESS_KEY=your-s3-access-key
FILE_BACKUP_S3_SECRET_KEY=your-s3-secret-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles for gradual rollouts
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_REAL_TIME_NOTIFICATIONS=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_MULTI_LANGUAGE=false

# =============================================================================
# SECURITY HEADERS & CSP
# =============================================================================

# Content Security Policy
CSP_REPORT_URI=https://your-csp-reporting-endpoint.com
CSP_REPORT_ONLY=false

# Security Headers
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# =============================================================================
# DEVELOPMENT & DEBUGGING (Keep false in production)
# =============================================================================

# Debug flags (should be false in production)
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PLAYGROUND=false
ENABLE_GRAPHQL_PLAYGROUND=false

# Development overrides (keep empty in production)
SKIP_AUTH=false
MOCK_EXTERNAL_APIS=false
DISABLE_RATE_LIMITING=false

# =============================================================================
# CUSTOM APPLICATION SETTINGS
# =============================================================================

# Business Logic Configuration
DEFAULT_CURRENCY=USD
DEFAULT_LANGUAGE=en
DEFAULT_TIMEZONE=UTC

# Product Settings
MAX_PRODUCTS_PER_ARTISAN=1000
MAX_IMAGES_PER_PRODUCT=10
FEATURED_PRODUCTS_LIMIT=20

# Order Settings
ORDER_TIMEOUT_HOURS=24
MAX_ITEMS_PER_ORDER=50
AUTO_CANCEL_UNPAID_ORDERS=true

# Search Settings
SEARCH_RESULTS_PER_PAGE=20
MAX_SEARCH_SUGGESTIONS=10
ENABLE_FUZZY_SEARCH=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Replace all placeholder values with actual production values
# 2. Keep this file secure and never commit it to version control
# 3. Ensure all secrets are properly randomized and meet security requirements
# 4. Review and update these settings regularly
# 5. Document any custom variables added for your specific deployment