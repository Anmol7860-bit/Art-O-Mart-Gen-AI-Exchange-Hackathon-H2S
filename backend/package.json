{
  "name": "art-o-mart-ai-backend",
  "version": "1.0.0",
  "description": "AI Agent Backend for Art-O-Mart Marketplace",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required for Node.js application'",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:api": "NODE_OPTIONS=--experimental-vm-modules jest tests/api.test.js --verbose",
    "test:websocket": "NODE_OPTIONS=--experimental-vm-modules jest tests/websocket.test.js --verbose",
    "test:agents": "NODE_OPTIONS=--experimental-vm-modules jest tests/agents.test.js --verbose",
    "test:ai": "NODE_OPTIONS=--experimental-vm-modules jest tests/ai.test.js --verbose",
    "test:db": "NODE_OPTIONS=--experimental-vm-modules jest tests/database.test.js --verbose",
    "test:auth": "NODE_OPTIONS=--experimental-vm-modules jest tests/auth.test.js --verbose",
    "test:migration": "NODE_OPTIONS=--experimental-vm-modules jest tests/mockData.test.js --verbose",
    "test:mockdata": "NODE_OPTIONS=--experimental-vm-modules jest tests/mockData.test.js --verbose",
    "test:all-db": "NODE_OPTIONS=--experimental-vm-modules jest tests/ --verbose",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest tests/api.test.js tests/websocket.test.js tests/agents.test.js tests/ai.test.js --verbose",
    "health": "node scripts/health-check.js",
    "health:check": "node scripts/health-check.js",
    "deploy:render": "node scripts/deploy.js render",
    "deploy:railway": "node scripts/deploy.js railway",
    "deploy:fly": "node scripts/deploy.js fly",
    "deploy:docker": "docker build -t art-o-mart-backend . && docker run -p 5000:5000 --env-file .env.production art-o-mart-backend",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "db:health": "node scripts/check-db-health.js"
  },
  "dependencies": {
    "@sentry/node": "^7.118.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "@supabase/supabase-js": "^2.57.4",
    "@google/generative-ai": "^0.21.0",
    "zod": "^3.22.4",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "node-cache": "^5.1.2",
    "uuid": "^9.0.1",
    "axios": "^1.6.2",
    "socket.io": "^4.6.0",
    "jsonwebtoken": "^9.0.2",
    "chalk": "^5.3.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "prom-client": "^14.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/node": "^20.10.4",
    "supertest": "^6.3.4",
    "socket.io-client": "^4.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}