# Production Environment Configuration
# Art-O-Mart Production Deployment Settings

# Application Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://artomart.com
API_URL=https://api.artomart.com

# Database Configuration (Supabase)
# WARNING: Real production credentials have been removed - source from deployment environment
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_anon_public_key_here
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key_here
# Alias for validation scripts compatibility  
SUPABASE_SERVICE_KEY=your_production_service_role_key_here
# Vite-prefixed variables for frontend build process
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_public_key_here
DATABASE_URL=postgresql://username:password@db.supabase.co:5432/postgres

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_here
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here

# Redis Configuration (Caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379

# PostgreSQL (Backup/Analytics Database)
POSTGRES_DB=artomart
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Monitoring & Error Tracking
SENTRY_DSN=your_sentry_dsn_here
FRONTEND_SENTRY_DSN=your_frontend_sentry_dsn_here
BACKEND_SENTRY_DSN=your_backend_sentry_dsn_here

# AI Services
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id

# Payment Processing
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=artomart-uploads-prod
AWS_BACKUP_BUCKET=artomart-backups-prod
AWS_CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id

# Email Service (SendGrid/AWS SES)
EMAIL_SERVICE=sendgrid
EMAIL_SERVICE_API_KEY=your_email_service_api_key
FROM_EMAIL=noreply@artomart.com
SUPPORT_EMAIL=support@artomart.com

# Security
ALLOWED_ORIGINS=https://artomart.com,https://www.artomart.com
ADMIN_EMAILS=admin@artomart.com
CORS_ORIGIN=https://artomart.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/artomart.crt
SSL_KEY_PATH=/etc/ssl/private/artomart.key

# Monitoring Configuration
PROMETHEUS_METRICS_PORT=9090
HEALTH_CHECK_ENDPOINT=/api/health

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
WEBHOOK_URL=your_monitoring_webhook_url
NOTIFICATION_EMAIL=alerts@artomart.com

# Docker Configuration
COMPOSE_PROJECT_NAME=artomart-prod
COMPOSE_FILE=docker-compose.prod.yml

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# Let's Encrypt
ACME_EMAIL=admin@artomart.com

# CDN Configuration
CDN_URL=https://cdn.artomart.com
STATIC_ASSETS_URL=https://cdn.artomart.com/static

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Feature Flags
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_LIVE_CHAT=true
FEATURE_MARKETPLACE_FEES=true

# Third-party Integrations
FACEBOOK_APP_ID=your_facebook_app_id
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_RETENTION_DAYS=7

# Performance
NODE_OPTIONS=--max-old-space-size=2048
WORKER_PROCESSES=auto

# Security Headers
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; media-src 'self' https:; connect-src 'self' https://api.artomart.com wss://api.artomart.com; frame-src 'none'; object-src 'none';

# Kubernetes Configuration (if using K8s)
KUBERNETES_NAMESPACE=artomart
KUBERNETES_SERVICE_ACCOUNT=artomart-service-account

# Load Balancer Configuration
LOAD_BALANCER_ALGORITHM=round_robin
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=3

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_ENTRIES=10000
STATIC_CACHE_DURATION=2592000

# Search Configuration
ELASTICSEARCH_URL=http://localhost:9200
SEARCH_INDEX_NAME=artomart_products

# Metrics & Analytics
RETENTION_POLICY_DAYS=90
ANALYTICS_SAMPLING_RATE=0.1

# Mobile App Configuration (if applicable)
MOBILE_API_VERSION=v1
PUSH_NOTIFICATION_KEY=your_push_notification_key

# Localization
DEFAULT_LOCALE=en_US
SUPPORTED_LOCALES=en_US,hi_IN,es_ES,fr_FR

# Business Configuration
MARKETPLACE_COMMISSION_RATE=0.05
MIN_ORDER_VALUE=500
FREE_SHIPPING_THRESHOLD=2000
CURRENCY=INR
TIMEZONE=Asia/Kolkata

# Social Media
SOCIAL_MEDIA_LINKS={"facebook":"https://facebook.com/artomart","instagram":"https://instagram.com/artomart","twitter":"https://twitter.com/artomart"}

# Legal
TERMS_OF_SERVICE_URL=https://artomart.com/terms
PRIVACY_POLICY_URL=https://artomart.com/privacy
COOKIE_POLICY_URL=https://artomart.com/cookies

# Development/Debug (should be false in production)
DEBUG=false
ENABLE_DEBUG_ROUTES=false
SHOW_STACK_TRACES=false